<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.BoldFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sora_bold</item>
        <item name="fontFamily">@font/sora_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.NormalFont" parent="android:TextAppearance">
        <item name="android:fontFamily">@font/sora_regular</item>
        <item name="fontFamily">@font/sora_regular</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="HeaderBar">
        <item name="android:background">#fff</item>
    </style>

</resources>